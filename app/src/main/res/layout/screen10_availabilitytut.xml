<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutoravailability"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkg">

    <!-- Back button -->
    <Button
        android:id="@+id/screen10_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/gg"
        android:text="@string/screen3_back"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Create Availability Button (TOP RIGHT) -->
    <Button
        android:id="@+id/btnCreateAvailability"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/gg"
        android:text="@string/screen10_btnCreateAvailability"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Week Navigation (CENTERED UNDER BACK, NICE SPACING) -->
    <LinearLayout
        android:id="@+id/weekNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/screen10_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnPrevWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:backgroundTint="@color/gg"
            android:text="@string/screen10_btnPrevWeek"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvWeekLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/screen10_tvWeekLabel"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNextWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:backgroundTint="@color/gg"
            android:text="@string/screen10_btnNextWeek"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Weekday Row -->
    <LinearLayout
        android:id="@+id/linearWeekdays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/weekNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/screen10_sun"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/screen10_mon"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/screen10_tue"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/screen10_wed"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/screen10_thu"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/screen10_fri"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="@string/screen10_sat"/>

    </LinearLayout>

    <!-- Time Labels Column (LEFT) -->
    <LinearLayout
        android:id="@+id/timeLabelsColumn"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/linearWeekdays"
        app:layout_constraintBottom_toTopOf="@id/auto_approve_checkbox"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Each label gets equal space -->
        <TextView android:id="@+id/textView2" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView2"/>
        <TextView android:id="@+id/textView3" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView3"/>
        <TextView android:id="@+id/textView4" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView4"/>
        <TextView android:id="@+id/textView5" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView5"/>
        <TextView android:id="@+id/textView6" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView6"/>
        <TextView android:id="@+id/textView7" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView7"/>
        <TextView android:id="@+id/textView8" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView8"/>
        <TextView android:id="@+id/textView9" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView9"/>
        <TextView android:id="@+id/textView10" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView10"/>
        <TextView android:id="@+id/textView11" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView11"/>
        <TextView android:id="@+id/textView12" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView12"/>
        <TextView android:id="@+id/textView13" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView13"/>
        <TextView android:id="@+id/textView14" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:text="@string/screen10_textView14"/>
    </LinearLayout>

    <!-- SLOTS GRID (Right of time labels) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSlots"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/linearWeekdays"
        app:layout_constraintBottom_toTopOf="@id/auto_approve_checkbox"
        app:layout_constraintStart_toEndOf="@id/timeLabelsColumn"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Auto Approve Checkbox (BOTTOM) -->
    <CheckBox
        android:id="@+id/auto_approve_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/screen9_autobook"
        android:textColor="@color/gg"
        android:buttonTint="@color/gg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
